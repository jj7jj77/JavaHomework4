package javaclasshomework4;
import java.util.Scanner;
public class PaintCalculator2 
{
    public static void main(String[] args)
    {
        int TotalWallCoverage = 350;  //paint covers 350 sq ft/gallon
        int height;
        int length;
        int width;
        double totalSqFt;
        double paintNeeded;
        Scanner input = new Scanner (System.in);
        System.out.print("Enter the length of the room: ");
        length = input.nextInt();
        System.out.print("Enter the width of the room: ");
        width = input.nextInt();
        System.out.print("Enter the height of the room: ");
        height = input.nextInt();
        
        totalSqFt = length * width * height;  //totalsqft to be painted
        public static double paintNeeded(double TotalSqFt, double length, double width, double height)
        {
            double paintNeeded;
            int TotalWallCoverage;
            paintNeeded = totalSqFt *2 / TotalWallCoverage; //amount of paint needed
         return paintNeeded;
          System.out.println("gallons of paint needed is " + paintNeeded);
        }
        
        
    
        //System.out.println("The height of the room is " + height + "feet");
        //System.out.println("The length of the room is " + length + "long");
        //System.out.println("The width of the room is " + width + "wide");
    }
}
